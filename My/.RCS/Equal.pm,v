1.3
log
@vim
@
text
@use feature 'say';

sub equal_seg {
    my ( $source, $target, $results, $number ) = @@_;
    my $num = 0 + @@$number;
    for ( my $i = 0 ; $i < $num ; $i++ ) {
        if ( $$source[$i] eq $$target[$i] ) {
            say
"<p>#$$number[$i]: $$source[$i]</p>";
            $$results{"id=\"$$number[$i]\""}{identical} += 1;
        }
    }
}
1;
@


1.2
log
@vim
@
text
@d9 1
a9 1
"<p>Segment <$$number[$i]><br>\n$$source[$i] equals<br>$$target[$i]</p>";
@


