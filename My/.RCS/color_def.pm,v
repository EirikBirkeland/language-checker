@package color_def;
# These are the color definition

our $WRONG = $red;
our $RIGHT = $green;
our $RESET = "\e[0m";

#Colors
my $red    = "\e[1;31m";
my $green  = "\e[1;32m";
my $blue   = "\e[1;34m";
my $purple = "\e[1;35m";
my $orange = "\e[1;33m";
1;
@


